#
# MongoDB
#

FROM ubuntu:16.04

LABEL project="${CNTR_PROJECT}"

RUN apt-get -y update && \
    apt-get -y install mongodb-server && \
    apt-get -y install mongodb-clients && \
    apt-get -y install netcat
RUN mkdir -p ${SHARED_FOLDER_DEV}/bin/docker
RUN mkdir -p /data/db
COPY . ${SHARED_FOLDER_DEV}/bin/docker
WORKDIR ${SHARED_FOLDER_DEV}/bin/docker


ENTRYPOINT ["/bin/bash", "${SHARED_FOLDER_DEV}/bin/docker/setup-db.sh"]
